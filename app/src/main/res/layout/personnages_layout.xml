<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.fancysoftware.wiki_of_the_storm.personnages_Fragment"
    android:background="#0d0119"
    android:padding="@dimen/abc_action_bar_default_padding_material">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="false">
    <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#090011"
        android:padding="@dimen/abc_action_bar_default_padding_material">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            android:contentDescription="Image Type"
            android:layout_alignParentRight="false"
            android:id="@+id/imageFavoris"
            android:layout_marginTop="10px"/>
        <TextView android:id="@+id/nom_perso" android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:textIsSelectable="false"
            android:textSize="22dp"
            android:textColor="#fff"
            android:textColorHighlight="#65d2fb"
            android:shadowColor="#65d2fb"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="7"
            android:layout_marginLeft="0dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/origine"
            android:id="@+id/origine_perso"
            android:textColor="#8eb1bc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:id="@+id/type_perso"
            android:textColor="#8eb1bc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/histoire"
            android:textSize="20dp"
            android:textColor="#36ffff"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/histoire"
            android:id="@+id/histoire_perso"
            android:textColor="#8eb1bc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skills"
            android:textSize="20dp"
            android:textColor="#36ffff"
            android:paddingTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basique"
            android:textSize="18dp"
            android:textColor="#8eb1bc"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skillsbasiques"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heroique"
            android:textSize="18dp"
            android:textColor="#8eb1bc"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skillsheroiques"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/traits"
            android:textSize="20dp"
            android:textColor="#36ffff"
            android:paddingTop="8dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/traits"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/talents"
            android:textSize="20dp"
            android:textColor="#36ffff"
            android:paddingTop="8dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/talents"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:src="@drawable/assassin"
        android:contentDescription="Image Type"
        android:layout_alignParentRight="true"
        android:id="@+id/imageType"/>
    </RelativeLayout>
    </ScrollView>

</FrameLayout>